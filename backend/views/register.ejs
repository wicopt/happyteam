<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>

    <style>
      body {
        max-width: 600px;
        margin: 40px auto;
      }
      h1 {
        text-align: center;
        margin-bottom: 30px;
      }
      .error-list li {
        color: #d00;
        font-weight: bold;
      }
      .form-group {
        margin-bottom: 15px;
      }
    </style>
  </head>

  <body>
    <h1>Register</h1>

    <ul class="error-list">
      <% if (typeof errors !== 'undefined') { %> 
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }) %> 
      <% } %>
    </ul>

    <form action="/auth/register" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <input
          class="u-full-width"
          type="text"
          id="username"
          name="username"
          required
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          class="u-full-width"
          type="password"
          id="password"
          name="password"
          required
        />
      </div>

      <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input
          class="u-full-width"
          type="password"
          id="password2"
          name="password2"
          required
        />
      </div>

      <div class="form-group">
        <label for="birthday">Birthday</label>
        <input
          class="u-full-width"
          type="date"
          id="birthday"
          name="birthday"
          required
        />
      </div>

      <div class="form-group">
        <label for="name">First Name</label>
        <input
          class="u-full-width"
          type="text"
          id="name"
          name="name"
          required
        />
      </div>

      <div class="form-group">
        <label for="surname">Surname</label>
        <input
          class="u-full-width"
          type="text"
          id="surname"
          name="surname"
          required
        />
      </div>

      <div class="form-group">
        <label for="patronymic">Patronymic</label>
        <input
          class="u-full-width"
          type="text"
          id="patronymic"
          name="patronymic"
        />
      </div>

      <!-- department_id -->
      <div class="form-group">
        <label for="department_id">Department</label>
        <select
          class="u-full-width"
          id="department_id"
          name="department_id"
          required
        >
          <option value="" disabled selected>Select department</option>

          <% if (typeof departments !== 'undefined' && departments.length > 0) { %>
            <% departments.forEach(dep => { %>
              <option value="<%= dep.department_id %>">
                <%= dep.department_name %>
              </option>
            <% }) %>
          <% } else { %>
            <option value="" disabled>No departments available</option>
          <% } %>
        </select>
      </div>

      <input class="button-primary" type="submit" value="Register" />
    </form>
  </body>
</html>